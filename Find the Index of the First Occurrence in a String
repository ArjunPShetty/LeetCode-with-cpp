class Solution {
public:
    int strStr(string haystack, string needle) {

        int n = haystack.size();
        int m = needle.size();

        // loop through possible starting points
        for(int i = 0; i <= n - m; i++) {

            bool match = true;

            // check each character
            for(int j = 0; j < m; j++) {
                if(haystack[i + j] != needle[j]) {
                    match = false;
                    break;
                }
            }

            // if match found, return starting index
            if(match) {
                return i;
            }
        }

        // needle not found in haystack
        return -1;
    }
};
