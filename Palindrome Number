class Solution {
public:
    bool isPalindrome(int x) {

        if (x < 0) {
            return false;
        }

        if (x != 0 && x % 10 == 0) {
            return false;
        }

        int reversed = 0;       
        int original = x;    


        while (original > reversed) {
            int lastDigit = original % 10;          
            reversed = reversed * 10 + lastDigit;  
            original = original / 10;              
        }

        if (original == reversed || original == reversed / 10) {
            return true;
        }

        return false;
    }
};
