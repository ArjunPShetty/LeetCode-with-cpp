class Solution {
public:
    int romanToInt(string s) {
        
        // map to store roman symbol values
        unordered_map<char, int> value;
        value['I'] = 1;
        value['V'] = 5;
        value['X'] = 10;
        value['L'] = 50;
        value['C'] = 100;
        value['D'] = 500;
        value['M'] = 1000;

        int n = s.size();
        int result = 0;

        // loop through each roman character
        for(int i = 0; i < n; i++) {

            int current = value[s[i]];

            // if next exists, get its value
            int next = 0;
            if(i + 1 < n) {
                next = value[s[i + 1]];
            }

            // if current < next then subtract
            if(current < next) {
                result -= current;
            }
            else {
                result += current;
            }
        }

        return result;
    }
};
